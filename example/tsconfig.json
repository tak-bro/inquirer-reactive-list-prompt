{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es2015",
        "module": "Node16",
        "moduleResolution": "Node16",
        "types": ["node"],
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
