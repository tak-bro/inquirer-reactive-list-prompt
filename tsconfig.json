{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es2015",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tmp"]
}
