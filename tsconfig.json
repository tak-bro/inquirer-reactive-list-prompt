{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es2015",
        "module": "Node16",
        "moduleResolution": "Node16",
        "types": ["node"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strictPropertyInitialization": false
    },
    "include": ["src"]
}
